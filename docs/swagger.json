{
    "swagger": "2.0",
    "info": {
        "description": "API para manejar pagos con Stripe.",
        "title": "Payment Collection API",
        "contact": {},
        "version": "1.0"
    },
    "host": "localhost:8087",
    "basePath": "/api",
    "paths": {
        "/payment/create-intent": {
            "post": {
                "description": "Procesa un pago y devuelve un Payment Intent",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Payments"
                ],
                "summary": "Crea un intento de pago",
                "parameters": [
                    {
                        "description": "Datos del pago",
                        "name": "paymentRequest",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/models.PaymentRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "models.PaymentRequest": {
            "type": "object",
            "properties": {
                "amount": {
                    "type": "number"
                },
                "currency": {
                    "type": "string"
                },
                "orderId": {
                    "type": "string"
                }
            }
        }
    }
}